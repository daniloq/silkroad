<header class="sr-nav">
  <div class="sr-nav__container sr-wrapper">
    <div class="sr-logo">
      <% link_to '/' do %>
        <%= image_tag 'images/logo.png', class: "sr-logo__image" %>
      <% end %>
    </div>
    <nav class="sr-desktop-nav">
      <%= partial "nav-links" %>
    </nav>
    <div class="sr-mobile-nav__button">
      <span class="sr-mobile-nav__button-item"></span>
      <span class="sr-mobile-nav__button-item"></span>
      <span class="sr-mobile-nav__button-item"></span>
    </div>
  </div>
</header>

<div class="sr-mobile-nav" style="display: none">
  <div class="sr-mobile-nav__title">Menu</div>
  <%= partial "nav-links" %>
</div>

<script>
  $('.sr-mobile-nav__button').click(function(e){
    e.preventDefault();
    $('.sr-mobile-nav').slideToggle();
    $(this).toggleClass('open');
  });
  $('.sr-mobile-nav__button').keypress(function(e){
    e.preventDefault();
    $('.sr-mobile-nav').slideToggle();
    $(this).toggleClass('open');
  });
</script>
