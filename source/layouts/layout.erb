<!doctype html>
<html lang="en-US">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Silkroad" %></title>
    <!-- Font Dependencies -->
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Open+Sans:300,400,400i,700" %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
    <!-- Jquery -->
    <%= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js" %>
    <!-- Normalize.css -->
    <%= stylesheet_link_tag "normalize" %>
    <!-- SR Components -->
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
  </head>
  <body>
    <%= yield %>
    <!-- Material Design JS -->
    <script src="//unpkg.com/material-components-web@latest/dist/material-components-web.min.js"></script>
    <script>mdc.autoInit();</script>
  </body>
</html>
